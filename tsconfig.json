{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "declaration": true,
        "removeComments": true,
        "strict": false,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        // "skipLibCheck": false,
        // "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/**/*", "spec/**/*"],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}